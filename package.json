{
    "name": "api.wallet",
    "version": "1.0.0",
    "description": "API to management incomes & outcomes",
    "scripts": {
        "build": "tsc",
        "debug:dev": "cross-env NODE_ENV=dev npm run debug",
        "debug:pre": "cross-env NODE_ENV=pre npm run debug",
        "debug:prod": "cross-env NODE_ENV=prod npm run debug",
        "debug": "ts-node-dev --respawn --transpile-only src/server.ts",
        "dockerize-down:dev": "cross-env NODE_ENV=dev PORT=3000 npm run dockerize-down",
        "dockerize-down:pre": "cross-env NODE_ENV=pre PORT=3001 npm run dockerize-down",
        "dockerize-down:prod": "cross-env NODE_ENV=prod PORT=3002 npm run dockerize-down",
        "dockerize-down": "docker compose -f docker-compose.yml down",
        "dockerize:dev": "cross-env NODE_ENV=dev PORT=3000 npm run dockerize",
        "dockerize:pre": "cross-env NODE_ENV=pre PORT=3001 npm run dockerize",
        "dockerize:prod": "cross-env NODE_ENV=prod PORT=3002 npm run dockerize",
        "dockerize": "docker compose -f docker-compose.yml up -d --build",
        "launch": "node --inspect=5858 dist/server.js",
        "lint:check": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "prebuild": "rimraf dist",
        "prelaunch": "npm run build",
        "prestart": "npm run build",
        "prettier:check": "prettier src/**/*.ts --check",
        "prettier:fix": "prettier src/**/*.ts --write",
        "start:dev": "cross-env NODE_ENV=dev npm run start",
        "start:pre": "cross-env NODE_ENV=pre npm run start",
        "start:prod": "cross-env NODE_ENV=prod npm run start",
        "start": "node dist/server.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "awilix": "^8.0.0",
        "awilix-express": "^8.0.0",
        "dotenv-flow": "^3.2.0",
        "express": "^4.18.2",
        "module-alias": "^2.2.2"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/dotenv-flow": "^3.2.0",
        "@types/express": "^4.17.14",
        "@types/module-alias": "^2.0.1",
        "@types/rimraf": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.1.4",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.3"
    }
}
